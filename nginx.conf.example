server {
    listen 80;
    server_name your-domain.com www.your-domain.com;

    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Konfigurasi untuk WebSocket jika diperlukan
    location /ws {
        proxy_pass http://localhost:8000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # Konfigurasi untuk file statis jika ada
    location /static/ {
        alias /var/www/mindtune-api/static/;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }

    # Konfigurasi untuk media jika ada
    location /media/ {
        alias /var/www/mindtune-api/media/;
        expires 30d;
        add_header Cache-Control "public, max-age=2592000";
    }

    # Konfigurasi untuk favicon
    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    # Konfigurasi untuk robots.txt
    location = /robots.txt {
        access_log off;
        log_not_found off;
    }

    # Konfigurasi untuk log
    access_log /var/log/nginx/mindtune-api-access.log;
    error_log /var/log/nginx/mindtune-api-error.log;
}